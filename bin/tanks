#!/usr/bin/env python3

import pygame, math
from pygame.locals import *

from pytanks.barrier import Barrier
from pytanks.bullet  import Bullet
from pytanks.turret  import ExampleTurret
from pytanks.util    import Destroyed
from pytanks.tank    import JoystickTank

def main (fps, w, h):

    pygame.init ()

    surface = pygame.display.set_mode ( (w, h) )
    clock   = pygame.time.Clock ()
    things  = []
    frames  = 0

    things.append (Barrier ( 10, (155, 50, 0), (w / 4, 20), (w / 2, 100) ))
    things.append (Barrier ( 10, (155, 50, 0), (20, 20), (50, 50) ))
    things.append (Barrier ( 10, (155, 50, 0), (20, 20), (50 + 1*(w - 100)/2, 50) ))
    things.append (Barrier ( 10, (155, 50, 0), (20, 20), (50 + 2*(w - 100)/2, 50) ))

    things.append (ExampleTurret ((w * .9, h * .9)))
    things.append (ExampleTurret ((w * .1, h * .9)))

    joy = pygame.joystick.Joystick (0)
    joy.init ()
    things.append (JoystickTank (joy, (0, h / 2)))

    while 1:

        for e in pygame.event.get ():
            if e.type == QUIT: return

        surface.fill ( (255, 255, 255) )

        frames += 1
        if frames == 1:

            for i in range (6):
                things.append (
                    Bullet (1, 2, 50, -math.pi / 3 - math.pi / 15 * i, 
                            (155, 155, 0), (5, 5), (w / 4 + w / 10 * i, h - 10))
                )

        for t in things:
            try:
                t.step (things, 1 / fps)
            except Destroyed:
                things.remove (t)
            finally:
                t.draw (surface)

        pygame.display.update ()
        clock.tick (fps)

if __name__ == "__main__":
    main (30, 640, 340)
